@{
    Layout = null;
}

   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/login.css">

<!------ Include the above in your HEAD tag ---------->

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="https://grupocinte.com/wp-content/uploads/2019/01/logo-colores-pantone-con-espacio-1030x425.png" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <form asp-controller="Manage" asp-action="Login" method="POST">
      <input type="text" id="email" class="fadeIn second" name="Email" placeholder="Email">
      <input type="text" id="contrasena" class="fadeIn third" name="Contrasena" placeholder="Password">
      <br>
      <label>Recuerdame</label>
      <input type="checkbox" id="recuerdame" class="fadeIn fourth" name="Recuerdame" placeholder="Recuerdame">
      <br>
      <input type="submit" class="fadeIn five" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>